{
  "manifest_version": 3,
  "name": "Amazon Cart ASIN Injector",
  "version": "1.0",
  "description": "Displays ASIN in the price block of Amazon cart items.",
  "permissions": ["scripting"],
  "host_permissions": ["https://www.amazon.com/gp/cart/view.html*"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/gp/cart/view.html*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
